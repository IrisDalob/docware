        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        padding: 40px;
    }

    .section-title {
        color: white;
        text-align: center;
    }

    .section-title-comen {
        color: blue;
        text-align: center;
    }

    /* Comentarios */
    .comments-section {
