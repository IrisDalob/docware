@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nuevo Documento";
}

<main class="content">
    <nav id="btn-Menu">
        <a href="#" class="btn btn-nav">Nuevo</a>
        <a href="#" class="btn btn-nav">En revisión</a>
        <a href="#" class="btn btn-nav">Aprobados</a>
        <a href="#" class="btn btn-nav">Avatares</a>
        <a href="#" class="btn btn-nav">Correo cambio contraseña</a>

    </nav>
    <!-- Encabezado con avatar e información del usuario -->
    <header class="header">
        <div class="user-info">
            <img src="~/img/avatar1.png.jpeg" alt="Usuario" class="user-avatar">
            <div>
                <p class="main-title">Luis Yañez</p>
                <p class="main-title">Product Manager</p>
            </div>
        </div>
    </header>

    <!-- Contenido Principal -->
    <a href="#" class="text">← Volver</a>

    <section class="document-section">
        <div class="document-preview">
            <img src="~/img/plantilladocument.png.png" alt="Vista previa del documento" class="preview-img">
            <button class="btn-Import">Importar archivo</button>
        </div>

        <button class="btn-Enviar">Enviar a revisión</button>
    </section>

    <div class="comments-section">
        <h3 class="section-title-comen">Comentario</h3>
        <textarea placeholder="Escribe un comentario..."></textarea>
        <button class="btn-Agregar">Agregar</button>
    </div>
</main>

<!-- Estilos adicionales -->
<style>
    textarea{
        width: 95%;
        height: 100px;
        border-radius: 5px;
        padding: 10px;
    }

