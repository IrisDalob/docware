
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] DocWare - Gestor Documental</title>
    <link href="/css/site.css" rel="stylesheet" />
    
   <style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #212529;
        color: #adb5bd;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        background-color: #343a40;
    }

    .navbar a {
        color: #fff;
        text-decoration: none;
        font-size: 1.25rem;
    }

    .navbar a:hover {
        color: #adb5bd;
    }

    .hero {
        text-align: center;
        padding: 4rem 2rem;
    }

    .hero h1 {
        font-size: 2.5rem;
        color: #fff;
    }

    .hero p {
        font-size: 1.25rem;
        color: #adb5bd;
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .hero .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border: none;
        border-radius: 0.25rem;
        cursor: pointer;
        margin: 0 0.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .album {
        padding: 2rem;
        background-color: rgba(0, 114, 206, 0.7);
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
    }

    .card {
        background-color: #005a94;
        border-radius: 0.15rem;
        overflow: hidden;
        margin: 0.5rem;
        flex: 1 1 calc(33.333% - 1rem);
        max-width: 400px;
    }

    .card img {
        width: 20em;
        height: 12em;
    }

    .card-body {
        padding: 1rem;
    }

    .card-footer {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0.75rem 1rem;
        background-color: #005a94;
    }

    .card-footer h3 {
        font-size: clamp(1rem, 2.5vw, 1.5rem); 
        color: #fff;
        margin: 0 0 0.5rem;
        text-align: center;
    }

    .card-footer .btn {
        padding: 0.25rem 0.75rem;
        font-size: 0.875rem;
    }


        .card-footer h3 {
            font-size: 1.2rem; 
        }
    }
</style>


</head>
<body class="main-background">
    @if (ViewBag.HideHeader == null || !(bool)ViewBag.HideHeader)
    {
    <header class="header">
        <h1 class="main-title">Gestor Documental DocWare</h1>
    </header>
    <nav class="nav-bar">
        <ul>
            <li><a href="/" class="nav-link active">Inicio</a></li>
            <li><a href="/Home/About" class="nav-link">Acerca de</a></li>
            <li><a href="/Home/Contact" class="nav-link">Contacto</a></li>
            <li><a href="/Home/Login" class="nav-link">Iniciar sesión</a></li>
        </ul>
    </nav> 
    }
    <main class="content">
        @RenderBody()
    </main>
    <footer class="footer">
        <p class="footer-text">&copy; 2024 Gestor Documental</p>
    </footer>
</body>
</html>


